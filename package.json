{
  "name": "petlog-website",
  "version": "1.0.0",
  "description": "A modern pet logging website with automated CI/CD pipeline",
  "main": "src/index.html",
  "scripts": {
    "start": "npx http-server src -p 3000",
    "build": "npm run clean && npm run copy-files && npm run minify",
    "build:prod": "npm run build && npm run optimize",
    "clean": "rm -rf dist && mkdir dist",
    "copy-files": "cp -r src/* dist/ && cp -r assets dist/ 2>/dev/null || :",
    "minify": "npm run minify:html && npm run minify:css && npm run minify:js",
    "minify:html": "npx html-minifier-terser --input-dir dist --output-dir dist --file-ext html --collapse-whitespace --remove-comments --minify-css --minify-js",
    "minify:css": "npx cleancss -o dist/css/styles.css dist/css/styles.css",
    "minify:js": "npx terser dist/js/script.js -o dist/js/script.js --compress --mangle",
    "optimize": "npm run optimize:images",
    "optimize:images": "echo 'Image optimization placeholder - add imagemin if needed'",
    "lint": "npm run lint:html && npm run lint:js",
    "lint:html": "npx htmlhint src/**/*.html",
    "lint:css": "echo CSS linting disabled",
    "lint:js": "npx eslint src/**/*.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npx jest",
    "test:integration": "npx playwright test",
    "test:a11y": "npx axe-cli http://localhost:3000",
    "validate-html": "npx html-validate src/**/*.html",
    "dev": "npx concurrently \"npm run start\" \"npx chokidar 'src/**/*' -c 'echo File changed: {path}'\"",
    "deploy:preview": "npx surge dist/ --domain petlog-preview.surge.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR_USERNAME/petlog-website.git"
  },
  "keywords": [
    "pet-logging",
    "website",
    "ci-cd",
    "github-actions",
    "static-site"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/petlog-website/issues"
  },
  "homepage": "https://YOUR_USERNAME.github.io/petlog-website/",
  "devDependencies": {
    "@axe-core/cli": "^4.8.2",
    "@playwright/test": "^1.40.0",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "html-minifier-terser": "^7.2.0",
    "html-validate": "^8.7.4",
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jsdom": "^23.0.1",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "terser": "^5.26.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}